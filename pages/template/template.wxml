<template name="step">
    <view class="banner_bg">
        <view class="text_wrap">
            <text class="banner_text text_1">雷哥留学智能选校工具</text>
            <text class="banner_text text_2">10分钟获取你的选校报告</text>
        </view>
        <view class="step_wrap">
            <view class="step_item step_1 {{step>=1?'item_on':''}}">
                <text class="step_index sn_1 {{step>=1?'step_on':''}}">1</text>
                <text class="step_name {{step>=1?'step_name_on':''}}" style="margin-left:-40rpx;">个人背景</text>
            </view>
            <view class="step_item step_conmen {{step>=2?'item_on':''}}">
                <text class="step_index sn_conmmen {{step>=2?'step_on':''}}">2</text>
                <text class="step_name {{step>=2?'step_name_on':''}}" style="margin-left:-140rpx;">学校背景</text>
            </view>
            <view class="step_item step_conmen {{step>='3'?'item_on':''}}">
                <text class="step_index sn_conmmen {{step>='3'?'step_on':''}}">3</text>
                <text class="step_name {{step>='3'?'step_name_on':''}}" style="margin-left:-140rpx;">个人软背景</text>
            </view>
            <view class="step_item step_4 {{step>='4'?'item_on':''}}">
                <text class="step_index sn_conmmen {{step>='4'?'step_on':''}}">4</text>
                <text class="step_name {{step>='4'?'step_name_on':''}}" style="margin-left:-100rpx;">申请方向背景</text>
            </view>
        </view>
        <image class="banner_src" src="/pages/images/banner_bg.png"></image>
    </view>
</template>
