<loading hidden="{{loading}}"></loading>
<view class="login-bg flex-container-center">
    <image src="../images/jilv-bigBG02.jpg" style="width:100%;height:100%;position:absolute;top:0;left:0;z-index:-1;"></image>
    <view class="login-box">
        <text class="login-title">雷哥网账号登录</text>
        <view class="input-kuang flex-container">
            <image src="../images/login-usericon.png" style="width:36rpx;height:36rpx;"></image>
            <input bindblur="yanzZhanghao" placeholder="手机号/邮箱" placeholderStyle="color: #ffffff;" type="text"></input>
        </view>
        <view class="input-kuang flex-container">
            <image src="../images/login-passicon.png" style="width:28rpx;height:32rpx;"></image>
            <input bindblur="yanzMima" placeholder="密码" placeholderStyle="color: #ffffff;" type="password"></input>
        </view>
        <button bindtap="loginFun">登录</button>
        <view class="flex-container userHandle">
            <navigator class="handleLogin" url="../register/register">注册账号></navigator>
            <navigator class="handleLogin" url="../foundPassword/foundPassword">忘记密码?</navigator>
        </view>
    </view>
</view>
