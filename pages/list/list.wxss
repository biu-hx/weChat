page {
  height: 100%;
  background: #f0f0f0;
}

.listBox {
  padding: 20rpx;
}

.listItem_wrap {
  background: #fff;
  margin-bottom: 24rpx;
  padding: 28rpx 20rpx;
  border-radius: 8rpx;
  border: 1px solid #dcdcdc;
}

.listItem {
  display: flex;
  flex-flow: wrap row;
  justify-content: space-between;
  align-items: center;
}

.majorName {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 5rpx;
}

.score {
  font-size: 28rpx;
  color: #333;
}

.time {
  font-size: 24rpx;
  color: #777;
}

.detail {
  color: #fff;
  background: #98bc36;
  font-size: 28rpx;
  padding: 14rpx 30rpx;
  border-radius: 8rpx;
}

.tap {
  background: #74951d;
}

.hint {
  font-size: 30rpx;
}
