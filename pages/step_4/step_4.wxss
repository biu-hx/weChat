@import "../template/template.wxss";

page {
    background: #efefef;
}

.intWrap {
    background: #efefef;
    padding: 40rpx 35rpx 0;
}

.intParentBox {
    padding: 40rpx 20rpx;
    background: #fff;
    border-radius: 10rpx;
}

.intChidbox {
    margin-bottom: 18rpx;
}

.hintBox {
    padding-bottom: 20rpx;
}

.must {
    width: 18rpx;
    display: inline-block;
    vertical-align: middle;
    font-family: 'Microsoft YaHei';
    color: #ff0606;
    font-size: 24rpx;
}

.bigName {
    font-family: 'ArialAr';
    font-size: 34rpx;
}

.nameDe {
    padding-left: 10rpx;
    font-size: 26rpx;
    color: #666;
}

.intText {
    width: 90%;
    height: 44rpx;
    font-size: 24rpx;
    margin-left: 18rpx;
    padding: 8rpx 15rpx;
    border-radius: 8rpx;
    border: 1rpx solid #c6c6c6;
}

.nextBtn_box {
    padding-top: 80rpx;
    display: flex;
    flex-flow: wrap row;
}

.nextBtn {
    background: #98bc36;
    color: #fff;
    border: none;
    width: 250rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 32rpx;
    border-radius: 8rpx;
    margin: auto;
    justify-content: space-around;
    text-align: center;
}

.select {
    width: 90%;
    height: 44rpx;
    font-size: 24rpx;
    padding: 10rpx 15rpx;
    margin-left: 18rpx;
    border-radius: 8rpx;
    border: 1rpx solid #c6c6c6;
    display: flex;
    position: relative;
    flex-flow: wrap row;
    flex-direction: column;
    justify-content: center;
}

.icon_tran {
    position: absolute;
    width: 20rpx;
    height: 17rpx;
    right: 16rpx;
    top: 50%;
    margin-top: -8rpx;
}