@import "../template/template.wxss";

page {
    background: #efefef;
}

.intWrap {
    padding: 40rpx 20rpx 0;
}

.row {
    padding-bottom: 15rpx;
}

.flex {
    display: flex;
    flex-flow: wrap row;
    align-items: center;
}

.select {
    position: relative;
    margin-left: 18rpx;
    width: 300rpx;
    height: 30rpx;
    background: #fff;
    font-size: 24rpx;
    padding: 10rpx 15rpx;
    border: 1rpx solid #ccc;
    border-radius: 8rpx;
}

.objName {
    font-size: 32rpx;
    color: #070707;
}

.textInt_box {
    margin-top: 15rpx;
    padding: 14rpx;
    background: #fff;
}

.int_hint {
    color: #777777;
}

.textInt {
    width: 100%;
    font-size: 24rpx;
    height: 120rpx;
}

.nextBtn_box {
    padding: 80rpx 0;
    display: flex;
    flex-flow: wrap row;
}

.nextBtn {
    background: #98bc36;
    color: #fff;
    border: none;
    width: 250rpx;
    height: 64rpx;
    line-height: 64rpx;
    font-size: 32rpx;
    border-radius: 8rpx;
    margin: auto;
    justify-content: space-around;
    text-align: center;
}

.icon_tran {
    position: absolute;
    width: 20rpx;
    height: 17rpx;
    right: 16rpx;
    top: 50%;
    margin-top: -8rpx;
}